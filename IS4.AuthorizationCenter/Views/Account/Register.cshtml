@model IS4.AuthorizationCenter.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "注册";
}
@section style{
    <link rel="stylesheet" href="~/css/login.css">
}
<h2>@ViewData["Title"]</h2>


<div class="form-container sign-up-container">
    <partial name="_ValidationSummary" />
    <form asp-action="Register" asp-controller="Account" method="post">
        <h1>注册</h1>
        <input asp-for="NickName" placeholder="昵称">
        <span asp-validation-for="LoginName"></span>
        <input asp-for="LoginName" placeholder="登录名">
        <span asp-validation-for="LoginName"></span>
        <input asp-for="Email" placeholder="邮箱">
        <span asp-validation-for="Email"></span>
        <input asp-for="Password" placeholder="密码">
        <span asp-validation-for="Password"></span>
        <input asp-for="ConfirmPassword" placeholder="确认密码">
        <span asp-validation-for="ConfirmPassword"></span>
        <button type="submit">注册</button>
    </form>
</div>