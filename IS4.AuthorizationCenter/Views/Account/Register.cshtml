@model IS4.AuthorizationCenter.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "注册";
}
@section style{
    <link rel="stylesheet" href="~/css/login.css">
}
<div class="right-panel-active">
    <div class="form-container sign-up-container">
        <partial name="_ValidationSummary" />
        <form asp-action="Register" asp-controller="Account" method="post">
            <h1>注册</h1>
            <input asp-for="NickName" placeholder="昵称">
            <span asp-validation-for="LoginName"></span>
            <input asp-for="LoginName" placeholder="登录名">
            <span asp-validation-for="LoginName"></span>
            <input asp-for="Email" placeholder="邮箱">
            <span asp-validation-for="Email"></span>
            <input asp-for="Password" placeholder="密码">
            <span asp-validation-for="Password"></span>
            <input asp-for="ConfirmPassword" placeholder="确认密码">
            <span asp-validation-for="ConfirmPassword"></span>
            <button type="submit">注册</button>
        </form>
    </div>
    <form>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>欢迎回来！</h1>
                    <p>请您先登录的个人信息，进行操作。</p>
                    <button class="ghost" asp-controller="OAuth2" asp-action="Authorization">登录</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>你好朋友！</h1>
                    <p>输入您的个人信息注册成为会员。</p>
                    <button class="ghost" name="button" asp-controller="Account" asp-action="Register">注册</button>
                </div>
            </div>
        </div>
    </form>
</div>